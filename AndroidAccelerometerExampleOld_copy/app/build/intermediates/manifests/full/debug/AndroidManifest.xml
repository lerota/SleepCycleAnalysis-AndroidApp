<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javacodegeeks.androidaccelerometerexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="SleepCycleDetection" >
        <activity
            android:name="com.javacodegeeks.sleepcycledetection.SleepCycleDetection"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="SleepCycleDetection"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.javacodegeeks.sleepcycledetection.song" >
        </activity>

        <receiver
            android:name="com.javacodegeeks.sleepcycledetection.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="SleepCycleDetection" >
        </receiver>
    </application>

</manifest>